{
    "EXE": [
        "rm -rf dist tests",
        "mkdir -p dist/min tests"
    ],
    "source/*.js" : [
        "dist -plugins=malta-jest[argz:'--rootDir=tests'] -options=verbose:2",
        "dist/min -plugins=malta-jest[argz:'--rootDir=tests']...malta-millijs -options=verbose:2"
    ],
    "source/tests/*.js" : "tests -plugins=malta-jest[argz:'--rootDir=tests']",
    "source/*.md": "."
}